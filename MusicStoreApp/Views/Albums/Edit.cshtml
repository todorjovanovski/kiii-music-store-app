@model MusicStore.Domain.DomainModels.Album

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5 text-white">
    <h1>Edit Album</h1>

    <hr />

    <h4>Album Details</h4>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="AlbumName" class="control-label"></label>
                    <input asp-for="AlbumName" class="form-control" />
                    <span asp-validation-for="AlbumName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AlbumPrice" class="control-label"></label>
                    <input asp-for="AlbumPrice" class="form-control" />
                    <span asp-validation-for="AlbumPrice" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AlbumImage" class="control-label"></label>
                    <input asp-for="AlbumImage" class="form-control" />
                    <span asp-validation-for="AlbumImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AlbumDescription" class="control-label"></label>
                    <input asp-for="AlbumDescription" class="form-control" />
                    <span asp-validation-for="AlbumDescription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ArtistId" class="control-label">Artist</label>
                    <select asp-for="ArtistId" class="form-control" asp-items="ViewBag.ArtistId"></select>
                    <span asp-validation-for="ArtistId" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group mt-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row mt-1">
        <div class="col-md-6">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
