@model MusicStore.Domain.DomainModels.Album
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5 text-white">
    <div class="row">
        <div class="col-md-8">
            <h1 class="display-4">@Html.DisplayFor(model => model.AlbumName)</h1>
            <p class="lead">@Html.DisplayFor(model => model.AlbumDescription)</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="btn-group">
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-12">
            <dl class="row">
                <dt class="col-sm-3">Album Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AlbumName)</dd>
                <dt class="col-sm-3">Price:</dt>
                <dd class="col-sm-9">€@Html.DisplayFor(model => model.AlbumPrice)</dd>
                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AlbumDescription)</dd>
                <dt class="col-sm-3">Artist:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Artist.StageName)</dd>
            </dl>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <h3 class="mb-4">Tracks in Album</h3>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Track Name</th>
                            <th>Duration</th>
                            <th>Album</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.AlbumTracks)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.TrackName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Duration)</td>
                                <td>@Html.DisplayFor(modelItem => item.Album.AlbumName)</td>
                                <td>
                                    <a class="btn btn-outline-primary btn-sm" asp-controller="Tracks" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-outline-secondary btn-sm" asp-controller="Tracks" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-outline-danger btn-sm" asp-controller="Tracks" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    <a class="btn btn-primary btn-sm" asp-controller="Tracks" asp-action="AddToPlaylist" asp-route-id="@item.Id">Add to Playlist</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
