@model MusicStore.Domain.DomainModels.UserPlaylist

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mt-5 text-white">Edit</h1>

<h4 class="text-white">UserPlaylist</h4>
<hr />
<div class="row text-white">
    <div class="col-md-4">
        <form asp-action="Edit">
