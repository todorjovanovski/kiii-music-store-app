@model MusicStore.Domain.DomainModels.UserPlaylist

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5 text-white">
    <div class="row">
        <div class="col-md-8">
            <h1 class="display-4">@Html.DisplayFor(model => model.Name)</h1>
            <p class="lead">@Html.DisplayFor(model => model.Description)</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="btn-group">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

    <hr />

    <div class="row text-white">
        <div class="col-md-12">
            <h3 class="mb-4">Tracks in Playlist</h3>
            @if (Model.TrackInUserPlaylists.Count() == 0)
            {
                <p>No tracks in this playlist!</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Track</th>
                                <th>Duration</th>
                                <th>Album</th>
                                <th>Artist</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.TrackInUserPlaylists)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Track.TrackName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Track.Duration)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Track.Album.AlbumName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Track.Album.Artist.StageName)</td>
                                    <td>
                                        <a class="btn btn-outline-danger btn-sm" asp-action="DeleteFromUserPlaylist" asp-controller="Tracks" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
