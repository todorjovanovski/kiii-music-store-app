@model MusicStore.Domain.DomainModels.Artist

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5 text-white">
    <div class="row">
        <div class="col-md-8">
            <h1 class="display-4">@Html.DisplayFor(model => model.StageName)</h1>
            <p class="lead">Details about the artist</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="btn-group">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-12">
            <dl class="row">
                <dt class="col-sm-3">First Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FirstName)</dd>
                <dt class="col-sm-3">Last Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.LastName)</dd>
                <dt class="col-sm-3">Stage Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.StageName)</dd>
                <dt class="col-sm-3">Age:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Age)</dd>
            </dl>
        </div>
    </div>
</div>
