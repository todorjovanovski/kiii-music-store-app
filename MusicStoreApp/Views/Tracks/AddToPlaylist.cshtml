@{
}
@model MusicStore.Domain.DomainModels.Track

<h1>Add track to a playlist</h1>

<h4>Select a playlist: </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToPlaylist">
            <input type="hidden"  value="@Model.Id" name="trackId"/>
            <div class="form-group">
                <label class="control-label">Playlist: </label>
                <select asp-items="ViewBag.UserPlaylists" name="playlistId" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
