@model IEnumerable<MusicStore.Domain.DomainModels.Track>

@{
    ViewData["Title"] = "All Tracks";
}

<div class="container mt-5 text-white">
    <div class="d-flex flex-row justify-content-between mt-5 mb-5">
        <h1 class="display-4">Browse All Tracks</h1>
        <div class="d-flex flex-column justify-content-center">
            <a class="btn btn-dark" asp-action="Create">Create New Track</a>
        </div>
    </div>
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Track Name</th>
                        <th>Duration</th>
                        <th>Album</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.TrackName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Duration)</td>
                            <td>@Html.DisplayFor(modelItem => item.Album.AlbumName)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-outline-primary">Edit</a>
                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-outline-secondary">Details</a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-outline-danger">Delete</a>
                                    <a href="@Url.Action("AddToPlaylist", new { id = item.Id })" class="btn btn-outline-success">Add to playlist</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>        
    }
    @if (!Model.Any())
    {
        <div class="row text-white fw-bold">
            <div class="col-12">
                <p class="text-center">No tracks found.</p>
            </div>
        </div>
    }
</div>
