@model MusicStore.Domain.DomainModels.Track

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mt-5 text-white">Delete</h1>

<h3 class="text-white">Are you sure you want to delete this?</h3>
<div class="text-white">
    <h4 class="mt-4">Track Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Track Name:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.TrackName)</dd>
        <dt class="col-sm-3">Duration:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Duration)</dd>
        <dt class="col-sm-3">Album:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Album.AlbumName)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="mt-2">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
